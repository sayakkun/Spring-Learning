<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="q1" class="com.dev.CIWithMap.Question">
		<constructor-arg value="1"></constructor-arg>
		<constructor-arg value="Who is the greatest footballer of current time?"></constructor-arg>
		<constructor-arg>
			<map>
				<entry key="Meesi" value="Franco"></entry>
				<entry key="Ronaldo" value="Gualter"></entry>
			</map>
		</constructor-arg>
	</bean>

</beans>  
<!-- 
In case key is a ref to a class, key-ref
In case value is a ref to a class, value-ref -->
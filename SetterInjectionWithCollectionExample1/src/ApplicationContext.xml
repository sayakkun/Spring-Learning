<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="q1" class="com.dev.SIWithCollectionExample.Question">
		<property name="id" value="1"></property>
		<property name="name" value="Which of these vice president of India was earlier chief minister of his state?"></property>
		<property name="options">
			<list>
				<!-- list part remains same as constructor injection -->
				<value>Zakir Hussain</value>
				<value>V V Giri</value>
				<value>Bhairon Singh Shekhawat</value>
				<value>R Venkalaraman</value>
			</list>
		</property>
	</bean>

</beans>  